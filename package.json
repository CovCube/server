{
  "name": "cube2_server",
  "version": "1.0.0",
  "description": "The Cube Server of the Anti Corona Platform of TU Dresden.",
  "main": "index.js",
  "scripts": {
    "copyfiles:public": "rimraf dist/!(public) && copyfiles \"./public/**/*.*\" \"./dist/\"",
    "copyfiles:templates": "rimraf dist/!(templates) && copyfiles \"./templates/**/*.*\" \"./dist/\"",
    "onchange:public": "onchange -i -k \"./public/**/*.*\" -- copyfiles \"./public/**/*.*\" \"./dist/\"",
    "onchange:templates": "onchange -i -k \"./templates/**/*.*\" -- copyfiles \"./templates/**/*.*\" \"./dist/\"",
    "build": "concurrently \"tsc\" \"npm:copyfiles:*\"",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\" \"npm:onchange:*\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcticFall/cube2_server.git"
  },
  "author": "ArcticFall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArcticFall/cube2_server/issues"
  },
  "homepage": "https://github.com/ArcticFall/cube2_server#readme",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.12",
    "@types/node": "^16.0.0",
    "@types/pg": "^8.6.0",
    "@types/pg-format": "^1.0.2",
    "body-parser": "^1.19.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "hbs": "^4.1.2",
    "helmet": "^4.6.0",
    "mqtt": "^4.2.8",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/hbs": "^4.0.1",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.9",
    "onchange": "^7.1.0"
  }
}
