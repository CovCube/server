{{!Add html-head}}
{{#> html_head}}
    {{!Add custom scripts}}
    <link rel="stylesheet" href="/static/css/cube-detail.css">
{{/html_head}}

<body>
    {{!Add header}}
    {{> header}}

    {{!Fill content}}
    <div id="content">
        <h2>Cube</h2>
        <h3>{{cube.id}}</h3>

        <label for="location">Location:</label>
        <input type="text" name="location" id="location" value="{{cube.location}}">

        <div id="tables">
            <table id="sensors">
                <thead>
                    <th>Sensor</th>
                    <th>Push Rate</th>
                    <th></th>
                </thead>
                {{#each cube.sensors}}
                    <tr>
                        <td>{{this}}</td>
                        <td></td>
                        <td>
                            <img class="icon-delete" src="/static/img/minus-solid.svg" height="20px" alt="Delete">
                        </td>
                    </tr>
                {{/each}}
                {{#if all_sensors}}
                    <tr class="add-item">
                        <td colspan="3">
                            <select name="" id="">
                                {{#each all_sensors}}
                                    <option value="{{this.name}}">{{this.name}}</option>
                                {{/each}}
                            </select>

                            <img class="icon-delete" src="/static/img/plus-solid.svg" height="20px" alt="Add">
                        </td>
                    </tr>
                {{/if}}
            </table>
            <table id="actuators">
                <thead>
                    <th colspan="2">Actuators</th>
                </thead>
                {{#each cube.actuators}}
                    <tr>
                        <td>{{this}}</td>
                        <td>
                            <img class="icon-delete" src="/static/img/minus-solid.svg" height="20px" alt="Delete">
                        </td>
                    </tr>
                {{/each}}
                {{#if all_actuators}}
                    <tr class="add-item">
                        <td colspan="2">
                            <select name="" id="">
                                {{#each all_actuators}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>

                            <img class="icon-delete" src="/static/img/plus-solid.svg" height="20px" alt="Add">
                        </td>
                    </tr>
                {{/if}}
            </table>
        </div>
        <button type="button">Discard</button>
        <button type="button">Save</button>
    </div>

    {{!Add footer}}
    {{> footer}}
</body>
</html>