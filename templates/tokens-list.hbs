{{!Add html-head}}
{{#> html_head}}
    {{!Add custom scripts}}
    <link rel="stylesheet" href="/static/css/tokens-list.css">
{{/html_head}}

<body>
    {{!Add header}}
    {{> header}}

    {{!Fill content}}
    <div id="content">
        <h1>Tokens</h1>
        <table>
            <colgroup>
                <col>
                <col>
                <col>
                <col>
            </colgroup>
            <thead>
                <th>Owner</th>
                <th>Token</th>
                <th></th>
                <th></th>
            </thead>
            {{#each tokens}}
                <tr>
                    <td>{{this.owner}}</td>
                    <td>{{this.token}}</td>
                    <td></td>
                    <td>
                        <a href="/tokens/delete/{{this.token}}">
                            <i class="fas fa-trash fa-lg fa-button"></i>
                        </a>
                    </td>
                </tr>
            {{/each}}
                <tr>
                    <form action="/tokens" method="post" id="new_token_form">
                        <td>
                            <input id="new_token_owner_input" type="hidden" name="owner" placeholder="name">
                        </td>
                        <td></td>
                        <td>
                            <input id="new_token_submit" class="fa-button" type="hidden" name="submit" value="&#xf00c;">
                        </td>
                        <td>
                            <i id="new_token_add" class="fas fa-plus fa-lg fa-button"></i>
                            <i id="new_token_exit" class="fas fa-times fa-lg fa-button" style="display: none;"></i>
                        </td>
                    </form>
                </tr>
        </table>
    </div>

    {{!Add footer}}
    {{> footer}}

    <script src="/static/js/tokens-list.js"></script>
</body>
</html>